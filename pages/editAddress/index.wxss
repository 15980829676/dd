/* pages/editAddress/index.wxss */
page {
  background: #efefef
}
.list-wrap{
  width: 100%;
  overflow: hidden;
  /* padding: 20rpx; */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-bottom: 186rpx;
}
.list-wrap .list-item{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-bottom: 1rpx solid #efefef;
  position: relative;
  background: white;
  box-sizing: border-box;
}
.list-wrap .list-item::first-child {
  border:0; 
}
.list-wrap .list-item .item-top{
  height: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight: bold;
  color: #333;
}
.list-wrap .list-item .item-top .name {
  /* height: 100%;
  line-height: 32rpx; */
  font-size: 30rpx;
  margin-right: 25rpx;
}
.list-wrap .list-item .item-top .tel {
  /* height: 100%;
  line-height: 32rpx; */
  margin-right: 25rpx;
  font-size: 24rpx;
}
.list-wrap .list-item .icon-edit-wrap {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right:30rpx;
  top: 50%;
  margin-top: -50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.list-wrap .list-item .icon-edit-wrap .icon-edit{
  width: 45rpx;
  height: 45rpx;
}
.list-wrap .list-item .address-wrap{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.list-wrap .list-item .item-top .default{
  /* width: 50rpx; */
  /* height: 32rpx;
  line-height: 32rpx; */
  padding: 0 5rpx;
  margin-right: 10rpx;
  border: 1rpx solid red;
  font-size: 20rpx;
  color: red;
}
.list-wrap .list-item .address-wrap .address{
  /* width: 100%; */
  flex: 1;
  padding-right: 50rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #999;
}


