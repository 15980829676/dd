.city-wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.border-bot{
  position: relative;
  overflow: hidden;
}
.border-bot::after{
  content: '';
  width: 100%;
  position: absolute;
  transform-origin: 0 0;
  left: 30rpx;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9eaec;
  z-index: 100;
}
