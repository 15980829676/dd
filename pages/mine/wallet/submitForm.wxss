/* pages/mine/wallet/submitForm.wxss */
.FAE{
  bottom: 136rpx;
}
.mac-marbot{
  margin-bottom: 0;
}
.balance-tier {
  width: 100%;
  padding: 192rpx 0 212rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.balance-tier .icon {
  width: 160rpx;
  height: 160rpx;
}

.balance-tier .icon image {
  width: 100%;
  height: 100%;
}

.balance-tier .money {
  font-size: 56rpx;
  color: #333333;
  padding: 28rpx 0 10rpx;
}

.balance-tier .detail {
  padding-bottom: 40rpx;
  font-size: 24rpx;
  color: #333333;
  margin-bottom: 226rpx;
}

.balance-tier .btn {
  width: 346rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 6rpx;
  background: #4DA1FF;
  border-radius: 10rpx;
  padding: 0;
  margin: 0;
  margin-bottom: 20rpx;
}

.balance-tier .btn::after {
  border: none;
}

.balance-tier .btn:last-child {
  background: #EFEFEF;
  color: #4DA1FF;
  margin-bottom: 0;
}