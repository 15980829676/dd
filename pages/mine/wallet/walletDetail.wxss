/* pages/mine/wallet/balanceDetail.wxss */
page {
  background: #efefef
}
.module-content {
  padding-top: 100rpx;
}

.mac-marbot {
  margin-bottom: 0;
}

.m-icon {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 100%;
  background: #000;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  position: relative;
  margin-right: 20rpx;
}

.m-count {
  width: 16rpx;
  height: 16rpx;
  background: #eb0000;
  border-radius: 100%;
  position: absolute;
  top: 0;
  right: -10rpx;
}
.time{
  margin-top: 10rpx;
}
.module-list{
  justify-content: space-between;
}
.module-list .module-list-info{
  width: 70%;
}
.module-list .module-list-info .sn{
  font-size: 20rpx;
}
.module-list .module-list-amount{
  width: 30%;
}

.module-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 170rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e2e2e2;
  position: relative;
  background: white;
}
.module-item:last-child {
  border: 0;
}
.module-item .wrap{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.module-item .wrap .le {
  width: 59%;
}
.module-item .wrap .ri {
  width: 41%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.top .name{
  font-size:28rpx;
  color:#000;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.top .sn{
  white-space: nowrap;
  font-size:20rpx;
  text-align: right;
}
.bot {
  /* margin-top:10rpx; */
}
.bot .time{
  margin-top: 0 !important;
  font-size:20rpx;
  color:#999;
}
.bot .money{
  text-align: right;
  font-size:34rpx;
  color:#000;
}
.bot .pos_money{
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -21rpx;
}