/* pages/mine/wallet/recharge/recharge.wxss */
@import "../withdrawal/withdrawal.wxss";
@import "/wxParse/wxParse.wxss";
.mac-marbot{
  margin-top: 70rpx;
}
.modalContent {
  padding: 42rpx 44rpx;
  /* text-align: left; */
  font-size: 24rpx;
  color: #333;
}
.flex_center {
  display: flex;
  align-items: center;
  justify-content: center;
}
.placeholder{
  font-size: 32rpx;
  /* color: #000; */
}
.agreement{
  width: 100%;
  padding: 40rpx 0 30rpx 0;

  overflow: hidden;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.agreement .radio{
  width: 30rpx;
  height: 30rpx;
  /* border-radius: 50%; */
  background: #fff;
  border: 1rpx solid #4DA1FF;
  margin-right: 18rpx;
}
.agreement .radio image {
  width: 100%;
  height: 100%;
}
.agreement .agr-r {
  width: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.agreement .text{
  color: #666666;
}
.agreement .agr{
  color: #4DA1FF;
} 

/* 协议内容 */
#agreement{
  -webkit-overflow-scrolling: touch; 
  padding-bottom:30rpx;
}
#agreement .agreement-text {
  padding: 100rpx 30rpx 50rpx;
  /* padding-bottom:0; */
  box-sizing: border-box;
  overflow: hidden;
  height: 100%;
  overflow-y: scroll;
}

.top-bar .close-agreement {
  display: inline-block;
  /* float: right; */
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  right: 20rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 30rpx 30rpx;
  background-position:right center ;
  width: 40rpx;
  height: 40rpx;
}
.top-bar {
  padding: 25rpx 20rpx;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 777;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  /* line-height: 50rpx; */
  box-sizing: border-box;
  background: #4DA1FF;
  color: #fff;
}

.top-bar .bk {
  position: absolute;
  top: 0;
  width: 60rpx;
  height: 100%;
  left: 20rpx;
  text-align:left;
}

.top-bar .bk image {
  position:relative;
  top:24rpx;
}

.action-time{
  font-size:20rpx;
  font-weight:400;
  padding-top: 32rpx;
  color:rgba(153,153,153,1);
}
.draw-two{
  padding-bottom: 0;
}
.draw-four{
  padding: 0;
  padding-bottom: 19rpx;
}
.draw-btn {
  margin-top: 162rpx;
}