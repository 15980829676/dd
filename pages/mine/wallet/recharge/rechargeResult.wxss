/* pages/mine/wallet/recharge/rechargeResult.wxss */
.recharge-tier {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recharge-tier .icon {
  width: 160rpx;
  height: 160rpx;
  margin-top: 150rpx;
  margin-bottom: 32rpx;
}

.recharge-tier .icon image {
  width: 100%;
  height: 100%;
}

.recharge-tier .txt {
  font-size: 36rpx;
  color: #4DA1FF;
  margin-bottom: 50rpx;
}

.recharge-tier .txt1 {
  font-size: 24rpx;
  color: #999999;
}

.recharge-tier .txt2 {
  font-size: 36rpx;
  color: #333333;
  margin: 14rpx 0 332rpx;
}

.recharge-tier .txt3 {
  font-size: 24rpx;
  color: #999999;
  margin: 14rpx 0 332rpx;
}

.recharge-tier .money {
  font-size: 56rpx;
  color: #333333;
  margin-top: 7rpx;
  margin-bottom: 116rpx;
}

.recharge-tier .btn {
  width: 590rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 6rpx;
  background: #4DA1FF;
  border-radius: 10rpx;
  padding: 0;
  margin: 0;
  margin-bottom: 20rpx;
}

.recharge-tier .btn::after {
  border: none;
}