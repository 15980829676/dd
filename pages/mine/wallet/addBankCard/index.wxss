/* pages/mine/wallet/addBankCard/index.wxss */
page {
  background: #EFEFEF;
}
.FAE{
  bottom: 136rpx;
}
.add-card {
  width: 100%;
  height: 96rpx;
  padding: 0 44rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: 2rpx solid #E2E2E2;
  border-bottom: 2rpx solid #E2E2E2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 46rpx;
}

.add-card .card-z {
  width: 50%;
  display: flex;
  align-items: center;
}

.add-card .card-z .icon {
  width: 49.22rpx;
  height: 30.68rpx;
  margin-right: 36rpx;
}

.add-card .card-z .icon image {
  width: 100%;
  height: 100%;
}

.add-card .card-z .txt {
  font-size: 24rpx;
  color: #333333;
  line-height: 96rpx;
}

.add-card .card-y {
  width: 12rpx;
  height: 24rpx;
  display: flex;
}

.add-card .card-y image {
  width: 100%;
  height: 100%;
}

.apply-for {
  width: 100%;
  display: flex;
  justify-content: center;
}

.apply {
  width: 180rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
}

.apply .icon {
  width: 36rpx;
  height: 25.46rpx;
  margin-right: 18rpx;
}

.apply .icon image {
  width: 100%;
  height: 100%;
}

.apply .txt {
  font-size: 24rpx;
  color: #4DA1FF;
  line-height: 32rpx;
}

.bank-card {
  width: 100%;
  height: 188rpx;
  background: #fff;
  padding: 0 44rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.bank-card .bc-z {
  width: 80%;
  display: flex;
  align-items: center;
}

.bank-card .bc-z .icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 26rpx;
}

.bank-card .bc-z .icon image {
  width: 100%;
  height: 100%;
}

.bank-card .bc-z .infor {
  width: 90%;
}

.bank-card .bc-z .infor .yh {
  font-size: 32rpx;
  color: #1A1311;
  margin-bottom: 20rpx;
}

.bank-card .bc-z .infor .yh text {
  padding-left: 20rpx;
  font-size: 20rpx;
  color: #999999;
}

.bank-card .bc-z .infor .wh {
  font-size: 24rpx;
  color: #333333;
}

.bank-card .bc-z .infor .wh text {
  font-size: 28rpx;
}

.bc-y {
  width: 12rpx;
  height: 24rpx;
}

.bc-y image {
  width: 100%;
  height: 100%;
}