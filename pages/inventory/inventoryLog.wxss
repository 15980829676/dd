.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.coumn {
   display: flex;
   flex-direction: column;
}
.log-item-wrap{
  width: 100%;
  min-height: 80rpx;
  color: #5c5c5c;
  font-size: 28rpx;
}
.log-item-wrap .log-item-top{
  position: relative;
  height: 66rpx;
  line-height: 66rpx;
}
.log-item-wrap .log-item-top .day{
  display: inline-block;
  position: absolute;
  width: 100rpx;
  text-align: center;
  left: -50rpx;
  top: 0;
  color: #747474;
}
.log-item-wrap .log-item-bot {
  display: inline-block;
  position: relative;
  width: 100%;
  box-sizing: content-box;
  /* margin-left: 36rpx; */
  border-left: 1rpx solid #DDDDDD;
}
.log-item-wrap .log-item-bot .circle-wrap {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: -14.5rpx;
  /* left: -15rpx; */
  top: 30rpx;
}
.log-item-wrap .log-item-bot .circle{
  width: 28rpx;
  height: 28rpx;
  background: #DDDDDD;
  border-radius: 50%; 
  box-sizing: border-box;
  border: 4rpx solid #fff;
  /* margin: 6rpx 0; */
}
.log-item-wrap .log-item-bot .right-wrap{
  flex: 1;
  box-sizing: border-box;
  padding-left: 72rpx;
  position: relative;
  /* border-left: 1rpx solid #DDDDDD; */
  overflow: hidden;
}
.log-item-wrap .log-item-bot .log-item-content{
  flex: 1;
  margin-top: 30rpx;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #F1F1F1;
  display: block;
}
.log-item-wrap .log-item-bot .log-item-content .type-time-wrap{
  display: inline-block;
  border: 1rpx solid #4DA1FF;
  font-size: 24rpx;
  border-radius: 10rpx;
}
.log-item-wrap .log-item-bot .log-item-content .type-time-wrap .tt{
  padding: 0 10rpx;
  float: left;
  height: 40rpx;
  line-height: 40rpx;
  box-sizing: border-box;
}
.log-item-wrap .log-item-bot .log-item-content .type-time-wrap .type{
  width: 116rpx;
  text-align: center; 
  background-color: #4DA1FF;
  color: #fff;
}
.log-item-wrap .log-item-bot .log-item-content .type-time-wrap .time{
  
}
.log-item-wrap .log-item-bot .log-item-content .content {
  justify-content: space-between;
  margin-top: 5rpx;
}
.log-item-wrap .log-item-bot .log-item-content .content .title {
  width: 380rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.log-item-wrap .log-item-bot .log-item-content .content .num {
  display: flex;
  align-items: center;
}
.log-item-wrap:first-child .log-item-bot{
  border-left-color: #4DA1FF;
}
.log-item-wrap:first-child .log-item-bot .circle{
  background: #4DA1FF;
}