/* pages/Receiving log/Receiving log.wxss */
page {
  background: #EFEFEF;
}

.R-log-1 {
  width: 100%;
  padding: 52rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.R-log-1 .R-left {
  width: 50%;
  display: flex;
  flex-direction: column;
}

.R-log-1 .R-left .text {
  font-size: 24rpx;
  color: #333333;
  padding-bottom: 10rpx;
  line-height: 34rpx;
}

.R-log-1 .R-left .text .odd{
  font-size: 20rpx;
  padding-left: 2rpx;
  line-height: 24rpx;
}

.R-log-1 .R-left .time {
  font-size: 20rpx;
  color: #999999;
  line-height: 28rpx;
}

.R-log-1 .R-right {
  display: flex;
}

.R-log-1 .R-right .R-btn {
  width: 170rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background: #4DA1FF;
  border-radius: 10rpx;
  letter-spacing: 2rpx;
  margin-right: 20rpx;
}

.R-log-1 .R-right .R-btn:last-child {
  background: #EFEFEF;
  color: #4DA1FF;
  margin-right: 0;
}

.R-log-2 {
  width: 100%;
  position: relative;
}

.R-log-2 .mask-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 555;
  background: rgba(0, 0, 0, 0.5);
}

.R-log-2 .rl-wrap {
  position: fixed;
  top: 360rpx;
  left: 50%;
  margin-left: -250rpx;
  width: 500rpx;
  z-index: 666;
  background: #fff;
  border-radius: 10rpx;
}

.R-log-2 .rl-wrap .text {
  width: 100%;
  padding: 88rpx 24rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

.R-log-2 .rl-wrap .fu2k {
  width: 100%;
  display: flex;
  border-top: 2rpx solid #E2E2E2;
}

.R-log-2 .rl-wrap .fu2k .btn {
  width: 50%;
  padding: 24rpx 0;
  color: #BBBBBB;
  font-size: 24rpx;
  letter-spacing: 6rpx;
  text-align: center;
  border-right: 2rpx solid #E2E2E2;
}

.R-log-2 .rl-wrap .fu2k .btn:last-child {
  color: #4DA1FF;
  border-right: none;
}
.R-rig{display:flex;}
.mac-marbot .kong {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #BBBBBB;
  padding-top: 72rpx;
  padding-bottom: 94rpx;
}

