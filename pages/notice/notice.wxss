/* pages/notice/notice.wxss */
.incomeexpenses {
  
  margin-top: 20px; 
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius:5px; 
  /* margin-bottom: 20rpx; */
}

.incomeexpenses .stupid {
  width: 100%;
  height: 100px;
  padding: 0 23px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #EFEFEF;
  position: relative;
}

.incomeexpenses .stupid .text {
  font-size: 28rpx;
  color:#1A1311;
}

.incomeexpenses .stupid .text.action {
  font-size: 24rpx;
  color:#999999;
  margin-top: 10rpx;
}
.incomeexpenses .stupid .advance {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.incomeexpenses .stupid .advance image {
  width: 100%;
  height: 100%;
}

.incomeexpenses .ie-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.incomeexpenses .ie-wrap .wrap-a {
  width: 100%;
  display: flex;
  border-bottom: 2rpx solid #EFEFEF;
}

.incomeexpenses .ie-wrap .wrap-a:last-child {
  border-bottom: 0;
}

.incomeexpenses .ie-wrap .wrap-a .a-left {
  width: 50%;
  padding: 26rpx 50rpx;
  box-sizing: border-box;
  border-right: 2rpx solid #EFEFEF;
  position: relative;
}

.incomeexpenses .ie-wrap .wrap-a .a-left:last-child {
  border-right: 0;
}

.incomeexpenses .ie-wrap .wrap-a .a-left .text {
  font-size: 20rpx;
  color: #999999;
  padding-bottom: 10rpx;
}

.incomeexpenses .ie-wrap .wrap-a .a-left .money {
  display: flex;
  align-items: center;
  width: 100%;
  height: 40rpx;
  overflow: hidden;
  position: relative;
  font-size: 24rpx;
  color: #333333;
}

.incomeexpenses .ie-wrap .wrap-a .a-left .icon {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 48rpx;
  right: 48rpx;
  overflow: hidden;
}
.incomeexpenses .ie-wrap .wrap-a .a-left .icon-wrap{
  width: 100%;
  height: 48rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.isread {
  position: absolute;
  top: 50%;
  right: 66rpx;
   transform: translateY(-50%);
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 18rpx;
  color: #fff;
  background-color: #ff4c31;
  word-break: normal;
}
.leftTop {
  display: flex;
  align-items: center;
  
}
.leftImage {
  width: 40px;
  height: 40px;
}
.topText {
  display: flex;
  flex-direction: column;
  margin-left: 23px;
  justify-content: space-around;
}