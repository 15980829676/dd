/* marketing/ranking/index.wxss */
.ranking {
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.title {
    font-size: 28rpx;
    color: #333333;
    letter-spacing: 2px;
    margin-top:30rpx;
    margin-bottom:20rpx;
}
.ranking-row {
  width:700rpx;
  height:440rpx;
  background:rgba(248,248,249,1);
  box-sizing: border-box;
  padding: 0 20rpx;
  overflow:hidden; 
  
}
.ranking_Top {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  
}
.rankingList {
   width: 100%;
   height: 88rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
   border-bottom:1px solid #E2E2E2; 
}
.fontList {
  font-size: 24rpx;
  color: #333333;
}
.explain {
  width: 100%;
  text-align: center;
  height: 46rpx;
  line-height: 46rpx;
  color: #999999;
  font-size: 20rpx;
  margin: 40rpx 0;
}