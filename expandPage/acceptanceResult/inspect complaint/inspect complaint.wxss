}

.pic {
  width: 206rpx;
  height: 206rpx;
  border: 2rpx solid #EFEFEF;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  position: relative;
}
.out {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(50%,-50%);
  background: red;
  border-radius:100%; 
}
.out::before {
  width: 2rpx;
  height: 80%;
  display: block;
  content: '';
  position: absolute;
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%) rotate(45deg);
  background: white;
  transform-origin: center;
}
.out::after {
  width: 2rpx;
  height: 80%;
  display: block;
  content: '';
  position: absolute;
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%) rotate(-45deg);
  background: white;
  transform-origin: center;
}
.pic .icon {
  width: 35.84rpx;
  height: 35.84rpx;
  margin-top: 76rpx;
  margin-bottom: 12rpx;
}

.pic .icon image {
  width: 100%;
  height: 100%;
}

.pic .explain {
  font-size: 20rpx;
  color: #999;
}

.y-telephone {
  width: 100%;
