.submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: 22;
  text-align: center;
  line-height: 100rpx;
  background: #4DA1FF;
  color: #fff;
  margin: 0;
  border: none;
  border-radius: 0;
  font-size: 30rpx;
}
