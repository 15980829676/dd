/* pages/my complaint/my complaint.wxss */
page {
  background: #EFEFEF;
}

.mc-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 20rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 48rpx 20rpx;
}

.content .mdzz {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 36rpx;
}

.content .mdzz .kl {
  display: flex;
}

.content .mdzz .kl .apply {
  width: 120rpx;
  color: #999;
  font-size: 24rpx;
}
  
.content .mdzz .kl .time {
  color: #333;
  font-size: 24rpx;
}

.content .mdzz .state {
  color: #4DA1FF;
  font-size: 24rpx;
}

.content .mdzz .state.clr {
  color: #333;
}

.content .cause {
  width: 100%;
  display: flex;

}

.content .cause .c-l{
  width: 120rpx;
  color: #999;
  font-size: 24rpx;
}

.content .cause .c-r{
  width: 83%;
  color: #333;
  font-size: 24rpx;
}

.check {
  width: 100%;
  border-top: 2rpx solid #E2E2E2;
  padding: 24rpx 0;
  color: #999;
  font-size: 28rpx;
  text-align: center;
}