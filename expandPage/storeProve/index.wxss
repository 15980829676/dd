/* storeProve/index.wxss */
.contain{
  width: 100%;
  display:flex;
  flex-direction: column;
  align-items: center;

}
.containTitle {
  font-size: 38rpx;
  color: #000;
  margin-top: 40px;
  font-weight: bold;
}
.containText {
  font-size: 28rpx;
  color: #cacaca;
  display:flex ;
  width: 75%;
  margin-top: 20rpx;
  text-align: center;
}
.maskCanvas {
  width: 450rpx;
  margin-top: 60rpx;
  border: 1px solid #cacaca;
  position: relative;
}
.onland {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #000;
}
.width100 {
  width: 100%;
}
.btn_view {
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing:border-box; 
  padding: 0 60rpx;
  margin-top: 20px;
}
.saveImg {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
  background: #b52828;
  margin: 0;
  padding: 0;
}
.disappearCanvas {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #000;
  background: f7f7f7;
  margin: 0;
  padding: 0;
  margin-top: 20px;
  margin-bottom: 20px;
}