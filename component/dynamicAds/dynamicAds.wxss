/* component/dynamicAds/dynamicAds.wxss */
.set-top {
  width: 100%;
  height: 70rpx;
  background: #EDF6FF;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  
}
.fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.set-top .marquee {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.set-top .marquee .icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 12rpx;
}

.set-top .marquee .icon image {
  width: 100%;
  height: 100%;
}

.set-top .marquee .text-hint {
  font-size: 20rpx;
  color: #4DA1FF;
}
