/* component/order/goods/group.wxss */
@import './goods.wxss';
/* 组合购 */
.item-wrap{
  border-bottom: 2rpx solid #d9d9d9;
}
.sum_title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #666;
  /* margin-bottom: 20rpx; */
  text-align: left;
  border-bottom: 2rpx dotted #d9d9d9;
  display: flex;
  flex-direction: row;
  align-items: center
}
.box {
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.bot{
  margin-bottom: 20rpx;
}
.sum_num{
  width: 100%;
  padding: 32rpx 0;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}
.sum_num .num_left{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #999;
}
.right-arrow {
  width: 13rpx;
  height: 24rpx;
  background: no-repeat center center url('data:image/svg+xml;base64,');
  background-size: cover;
  transform:rotate(90deg);
  margin-left: 14rpx;
  margin-top: 3rpx;
}
.sum_num .num_left .on {
  transform:rotate(-90deg);
}
.sum_num .price-t {
  color: #333;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.sum_num .price-t .u-p{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.sum_num .price-t .unit{
  font-weight: bold;
  font-size: 24rpx;
  margin-right: 5rpx;
}
.sum_num .price-t .price{
  font-weight: bold;
  font-size: 32rpx;
}