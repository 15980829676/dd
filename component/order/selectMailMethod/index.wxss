/* component/selectMailMethod/index.wxss */
@import "/font/DIN-Medium.wxss";
.disable{
  background: #eee !important;
  color:#999 !important;
}
.hide{
  display: none;
}
.Mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1001;
  background: rgba(0, 0, 0, 0.5);
  /* background: #fff; */
}
.Mask-layer{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.wrap{
  position: absolute;
  left: 0;
  bottom: 50px;
  width: 100%;
  height: 600rpx;
  /* background: #fff; */
  /* z-index: 1; */
}
.wrap .w-top {
  width: 100%;
  height: 100rpx;
  font-size: 24rpx;
  color: #000;
  text-align: center;
  line-height: 100rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #E2E2E2; 
  border-bottom: 2rpx solid #E2E2E2;
  position: relative; 
  background: #fff;
}

.wrap .btn-close {
  width: 102rpx;
  height: 102rpx;
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center; */
  justify-content: flex-end;
}
.wrap .btn-close .icon-close {
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}

.wrap .btn-back{
  width: 102rpx;
  height: 102rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center; */
  /* justify-content: flex-end; */
}
.wrap .btn-back .icon-back {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.mail-wrap{
  position: absolute;
  left: 100%;
  bottom: 50px;
  z-index: 3;
}

.list {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.list .list-item {
  width: 100%;
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx solid #E2E2E2;
  position: relative;
}
.list .list-item .icon-select{
  width: 26rpx;
  height: 30rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -20rpx;
}

.list .list-item:last-child {
  /* border-bottom: none; */
}