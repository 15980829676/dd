/* component/order/cashBack/index.wxss */
@import "/font/DIN-Medium.wxss";
/*使用返利*/

.use-rebate {
  width: 100%;
  position: relative;
}

.use-rebate .mask-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 555;
  background: rgba(0, 0, 0, 0.5);
}

.use-rebate .ur-wrap {
  position: fixed;
  bottom: 50px;
  left: 0;
  width: 100%;
  z-index: 1001;
  background: #fff;
}

.use-rebate .ur-wrap .title {
  width: 100%;
  font-size: 24rpx;
  color: #000;
  box-sizing: border-box;
  text-align: center;
  padding: 34rpx 0;
  border-top: 2rpx solid #E2E2E2; 
  border-bottom: 2rpx solid #E2E2E2; 
}

.use-rebate .ur-wrap .close {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  /* top: 38rpx;
  right: 38rpx; */
}

.use-rebate .ur-wrap .close .icon-close {
  width: 24rpx;
  height: 24rpx;
  margin-right: 26rpx;
}

.use-rebate .ur-wrap .wrap-a {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-1 {
  width: 100%;
  height: 98rpx;
  padding: 0 6rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx dashed #E2E2E2;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-1 .text {
  font-size: 24rpx;
  color: #333333;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-1 .round {
  width: 24rpx;
  height: 24rpx;
  border-radius: 100%;
  border: 2rpx solid #E2E2E2;
  background: #fff;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-1 .round.select {
  border: 2rpx solid #4DA1FF;
  background: #4DA1FF;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 {
  width: 100%;
  padding: 32rpx 6rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up:last-child {
  margin-bottom: 10rpx;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up .text{
  font-size: 24rpx;
  color: #333333;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up .text1{
  font-size: 20rpx;
  color: #999999;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up .text2{
  font-size: 20rpx;
  color: #1A1311;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up .text3{
  font-size: 24rpx;
  color: #4DA1FF;
  letter-spacing: 2rpx;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up .tier{
  display: flex;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up .tier .sign{
  width: 28rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 60rpx;
  text-align: center;
  padding-right: 10rpx;
}

.use-rebate .ur-wrap .wrap-a .wrap-a-2 .up .tier .input{
  width: 184rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 2rpx solid #E5E5E5;
  font-size: 28rpx;
  color: #333333;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.use-rebate .ur-wrap .wrap-b {
  width: 100%;
  padding: 34rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  background: #EDF6FF;
  color: #4DA1FF;
  font-size: 20rpx;
  line-height: 36rpx;
}

.use-rebate .ur-wrap .wrap-c {
  width: 100%;
  height: 86rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4DA1FF;
  color: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  letter-spacing: 6rpx;
}