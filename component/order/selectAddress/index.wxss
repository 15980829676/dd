.box{
  width: 100%;
  height: 100%;
  position:fixed;
  left: 0;
  top: 0;
  z-index: 1004;
}
.box-bkg{
  width: 100%; 
  height:100%;
  background: rgba(0,0,0,.4);
  position:absolute;
  left: 0;
  top: 0;
}
.wrap{
  width: 100%; 
  height: 600rx;
  position: absolute;
  background:#fff;
  left: 0;
  bottom: -100%;
}
.wrap .wrap-title{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.wrap .wrap-title .wrap-title-btn{
  width: 100rpx;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
}
.cancel{
  color: #999;
}
.confirm{
  color: #4DA1FF;
}
.picker-view{
  width: 100%; 
  height: 500rpx;
}
