/* 选择支付方式弹框 */
.Mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
}
.Mask-wrap{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.method {
  position: fixed;
  left: 0;
  bottom: 200rpx;
  width: 100%;
  z-index: 333;
  background: #fff;
}

.method .title {
  width: 100%;
  font-size: 24rpx;
  color: #000;
  text-align: center;
  padding: 34rpx 0;
  border-top: 2rpx solid #E2E2E2; 
  border-bottom: 2rpx solid #E2E2E2; 
}

.method .close {
  width: 102rpx;
  height: 102rpx;
  position: absolute;
  /* top: 38rpx; */
  /* right: 38rpx; */
  top: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.method .close image {
  width: 24rpx;
  height: 24rpx;
}

.method .m-wrap {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.method .m-wrap .wrap-a {
  width: 100%;
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx dashed #E2E2E2;
}

.method .m-wrap .wrap-a:last-child {
  border-bottom: none;
}

.method .m-wrap .wrap-a .left {
  width: 40%;
  display: flex;
}

.method .m-wrap .wrap-a .left .icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 12rpx;
  margin-right: 32rpx;
}

.method .m-wrap .wrap-a .left .icon image {
  width: 100%;
  height: 100%;
}

.method .m-wrap .wrap-a .left .text {
  font-size: 24rpx;
  color: #333;
}

.method .m-wrap .wrap-a .right {
  width: 60%;
  display: flex;
  justify-content: flex-end;
}

.method .m-wrap .wrap-a .right .text {
  font-size: 20rpx;
  color: #999999;
  /*line-height: 28rpx;*/
}

.method .m-wrap .wrap-a .right .money {
  font-size: 24rpx;
  color: #000;
  padding-left: 8rpx;
  line-height: 32rpx;
}

.method .m-wrap .wrap-a .right .icon{
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #E2E2E2;
  border-radius: 100%;
  background: #fff;
  margin-left: 32rpx;
  margin-right: 16rpx;
}

.method .m-wrap .wrap-a .right .icon.select {
  border: 2rpx solid #4DA1FF;
  background: #4DA1FF;
}

.method .m-wrap .wrap-a .right .icon.select1 {
  background: #E2E2E2;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 555;
  background: rgba(0, 0, 0, 0.5);
}

.dialog {
  width: 546rpx;
  height: 290rpx;
  background: #fff;
  border-radius: 10rpx;
  position: fixed;
  top:50%;
  margin-top: -145rpx;
  left: 50%;
  margin-left: -273rpx;
}

.dialog .txt {
  width: 100%;
  font-size: 24rpx;
  color: #333333;
  text-align: center;
  padding: 72rpx 0;
  border-bottom: 2rpx solid #E2E2E2;
}

.dialog .txt .bgc {
  color: #FF6464;
}

.dialog .btn {
  width: 100%;
  font-size: 24rpx;
  color: #4DA1FF;
  text-align: center;
  padding: 22rpx 0;
  letter-spacing: 6rpx;
}

/* 按钮 */
.btn-wrap{
  width: 100%;
  /* overflow: hidden; */
  height: auto;
}

.desk {
  width: 100%;
  height: 50px;
  background: #4DA1FF;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 50px;
  z-index: 1001;
  display: flex;
  justify-content: flex-end;
}

.balance {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance .rmb {
  font-size: 34rpx;
  color: #fff;
  padding-right: 26rpx;
}

.balance .btn {
  min-width: 170rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #fff;
  border: none;
  padding: 0;
  margin: 0;
  text-align: center;
  font-size: 24rpx;
  color: #4DA1FF;
  letter-spacing: 4rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.btn-loading-inner {
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  width: 14px;
  height: 14px;
  background: 0 0;
  border-radius: 50%;
  border: 2px solid #fff;
  border-color:  #4da1ff #4da1ff #4da1ff transparent;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}
@keyframes btn-spin{0%{transform:rotate(0)}100%{transform:rotate(360deg)}}

.agreement{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
}
.radio-group{
  height: auto;
}
.i-radio-radio-circle{
  transform:scale(0.8);
  float: none !important;
  width: auto;
}
.i-radio-cell{
  padding: 0;
  padding-left: 27rpx;
}
.radio-title{
  font-size: 24rpx;
}