.fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1002;
}
.selectedColor{
  color: #4DA1FF !important;
}
.tabbar{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: #fff;
}
.tabbar .tabbar-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.tabbar .tabbar-item .item {
  width: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.tabbar .tabbar-item .tabbar-icon{
  width: 27px;
  height: 27px;
  -webkit-box-pack: center;
  justify-content: center;
  box-sizing: border-box;
}
.tabbar .tabbar-item .tabbar-text{
  font-size: 10px;
  line-height: 1.3;
  margin-top: 3.5px;
  color: #222;
}

.point{
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 18rpx;
  color: #fff;
  background-color: #ff4c31;
  position: absolute;
  left: 31.5rpx;
  top: 0;
  word-break: normal;
}