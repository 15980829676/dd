/* component/searchTitle/orderSearch/index.wxss */
@import '/pages/inventory/orderGoods.wxss';

.searchOrder {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom:60px; 
  padding-top: 106rpx;
}
.orderSearch {
  width: 100%;
  border-bottom: 1px solid #f8f8f8;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  position:fixed;
  top: 0;
  left: 0;
  z-index: 3;
  background: white;
}
.searchInput {
  display: flex;
  flex: .85;
  background: #f2f2f2;
  align-items: center; 
  height: 66rpx;
  position: relative;
}
.searchImage {
  width: 60rpx;
  height: 60rpx;
}
.searchText {
  display: flex;
  flex: .9;
  height: 100%;
  line-height: 66rpx;
  font-size: 28rpx;
  color: #000;
}
.out {
  width: 30rpx;
  height: 30rpx;
  background: #cccccc;
  position: absolute;
  border-radius:100%; 
  top: 50%;
  right: 10rpx;
  transform: translateY(-50%)
}
.out::after {
  width: 2rpx;
  height: 60%;
  display: block;
  content: '';
  background: white;
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%,-50%) rotate(45deg);
  transform-origin: center;
}
.out::before {
  width: 2rpx;
  height: 60%;
  display: block;
  content: '';
  background: white;
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%,-50%) rotate(-45deg);
 
}
.btnText {
  font-size: 32rpx;
  color: #000;
  display: flex;
  flex: .15;
  justify-content: center;
}
