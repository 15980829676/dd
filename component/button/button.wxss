/* component/button/button.wxss */
.btn-warp{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btn{
  flex: 1;
  height: 100%;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  border: 0;
  outline: none;
  padding: 0;
  color: #4da1ff;
}