/* component/shadow/index.wxss */
/* #e2e2e2 */
.top_shadow {
  box-shadow: 0 1rpx 4rpx 2rpx rgba(0, 0, 0, 0.1) !important;
  /* box-shadow: inset 0 20rpx 15rpx -20rpx rgba(0, 0, 0, 0.2); */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 0 !important;
  z-index: 10001 !important;
}
.bot_shadow {
  box-shadow: 0 -1rpx 4rpx 2rpx rgba(0, 0, 0, 0.1) !important;
  /* box-shadow: inset 0 -5rpx 8rpx -3rpx rgba(0, 0, 0, 0.2); */
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 0 !important;
  z-index: 10001 !important;
}